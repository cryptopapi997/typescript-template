{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "strict": true
  },
  "include": [
    "src/**/*"
  ]
}